@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Kantinens Menu for uge 45</h1>
</div>

<!DOCTYPE html>
<html lang="da">
<div class="menu-container">
    <table class="menu-table">
        <thead>
        <tr>
            <th>Ugedag</th>
            <th>Kold Ret</th>
            <th>Varm Ret</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.MenuItems)
        {
            <tr>
                <td>@item.RowKey</td>
                <td>@item.KoldeRet</td>
                <td>@item.VarmeRet</td>
            </tr>
        }
        </tbody>
    </table>
</div>


<style>
    .menu-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }
    
    .menu-table {
        width: 80%;
        max-width: 600px;
        border-collapse: collapse;
        text-align: center;
        font-family: Arial, sans-serif;
        margin-top: 20px;
    }
</style>

</html>